<!doctype html>
<html lang="en">

<head>
	<title>Table 05</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<link href='/font.css' rel='stylesheet' type='text/css'>
	<!-- <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"> -->
	<link rel="stylesheet" href="/table-style.css">
	<script src="/jquery.js"></script>
	<script src="/bootstrap.min.js"></script>
	<script>
		function callSeeStudentMeth(e){
			location.href='/student/single-stdt?id='+e.id;
		}
		function changeLoc(){
            location.href='/student/studentadd-render'
        }
	</script>

</head>

<body>
	<button type="button" class="btn btn-secondary btn-lg btn-block" onclick="changeLoc();">Click here to add new student</button>
	<section class="ftco-section">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-md-6 text-center mb-5">
					<h2 class="heading-section">Student List</h2>
				</div>
			</div>
			<div class="row">
				<div class="col-md-12">
					<div class="table-wrap">
						<table class="table table-responsive-xl">
							<thead>
								<tr>
									<th>STUDENT DETIALS</th>
									<th>STUDENT_ID</th>
									<th>INTERVIEWS</th>
									<th>ADMISSION_DATE</th>
									<th>COURSE</th>
									<th>EMAIL</th>
								</tr>
							</thead>
							<tbody>

								<!-- Repeated code -->
								<%for(let x of data){%>
									<tr class="alert" role="alert" id="<%=x._id%>" onclick="callSeeStudentMeth(this);">
										<td>
											<div class="pl-3 email">
												<span>
													<%=x.NAME%>
												</span>
												<span>
													Age : <%=x.AGE%>
												</span>
												<span>
													College: <%=x.COLLEGE%>
												</span>
												<span>
													DOB: <%=x.DOB%>
												</span>
												<span>
													Contact No: <%=x.MOBILE%>
												</span>
											</div>
										</td>
										<td class="d-flex align-items-center">
											<div class="pl-3 email">
												<span>
													<%=x._id%>
												</span>
											</div>
										</td>
										<td>
											<%=x.INTERVIEWS.toString()%>
										</td>
										<%if(x.ADMISSION_DATE){%>
											<td class="status">
													<%=x.ADMISSION_DATE%>
												</td>
										<%}else{%>
										<td class="status"><span class="active">&nbsp;</span></td>
											<%}%>
										<td>
											<span>
												<%=x.COURSE%>&nbsp;
											</span>
											<span>(<%=x.BATCH%>)</span>
										</td>
										<td>
											<button type="button" class="close" data-dismiss="alert"
												aria-label="Close">
												<span aria-hidden="true">
													<%=x.EMAIL%>
												</span>
											</button>
										</td>
									</tr>
								<%}%>
								<!-- Repeated code -->
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</section>
</body>

</html>